<hr>
{{#if admin}}
<button><a href="/new">Crea un nuevo producto</a></button>
<button><a href="/store/checkVerify">Verificar tiendas</a></button>
{{/if}}
<br><br>
<div class="container">
  <div class="row">
    {{#each allProducts}}
    <div class="col-sm-4">
      <div class="card" style="width: 20rem">
        <div class="card-body">
          <h5 class="card-title"><a href="/detail/{{this._id}}">{{this.name}}</a></h5>
          <img class="thumbnail-index" src="{{this.imageUrl}}" alt="producto">
          <h6 class="card-subtitle mb-2 text-muted"><a href="/type/{{this.type}}">{{this.type}}</a></h6>
          <h6 class="card-subtitle mb-2 text-muted">{{this.category}}</h6>
          {{#if admin}}
          <div class="link-div">
            <button><a href="/edit/{{this._id}}" class="card-link">Editar</a></button>
            <button><a href="/delete/{{this._id}}" class="card-link">Borrar</a></button>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>